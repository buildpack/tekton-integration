apiVersion: tekton.dev/v1alpha1
kind: TaskRun
metadata:
  name: test-run
spec:
  taskRef:
    name: buildpacks-v3
  inputs:
    resources:
      - name: source
        resourceSpec:
          type: git
          params:
            - name: url
              value: https://github.com/buildpack/samples
    params:
      - name: BUILDER_IMAGE
        value: cnbs/sample-builder:alpine
      - name: APP_DIR
        value: apps/java-maven/
  outputs:
    resources:
      - name: image
        resourceSpec:
          type: image
          params:
            - name: url
              value: {{.IPAddress}}:{{.RegistryPort}}/samples/sample-app